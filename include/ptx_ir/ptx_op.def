// =============================================================================
// PTX Statement Type Definition (X-Macro Format)
// Format: X(enum_value, type_name, lowercase_string)
// =============================================================================
// -----------------------------------------------------------------------------
// 0. 基础结果指令
// -----------------------------------------------------------------------------
X(S_REG,     REG,     "reg")      // Register: %r1, %rd1, etc.
X(S_CONST,   CONST,   "const")    // Constant: 0, 1.0f, etc.
X(S_SHARED,  SHARED,  "shared")   // Shared memory address
X(S_LOCAL,   LOCAL,   "local")    // Local memory address
X(S_DOLLOR,  DOLLOR,  "dollar")   // Dollar symbol: $r1 (inline PTX register)

// -----------------------------------------------------------------------------
// 1. 特殊指令
// -----------------------------------------------------------------------------
X(S_AT,      AT,      "at")       // Predicate prefix: @%p1
X(S_PRAGMA,  PRAGMA,  "pragma")   // Custom pragmas or annotations

// -----------------------------------------------------------------------------
// 2. 控制指令（Control Flow）
// -----------------------------------------------------------------------------
X(S_RET,     RET,     "ret")      // Return from function
X(S_BRA,     BRA,     "bra")      // Branch

// -----------------------------------------------------------------------------
// 3. 数据移动与转换（Data Movement & Conversion）
// -----------------------------------------------------------------------------
X(S_LD,      LD,      "ld")       // Load from memory
X(S_ST,      ST,      "st")       // Store to memory
X(S_MOV,     MOV,     "mov")      // Move data
X(S_CVT,     CVT,     "cvt")      // Type conversion
X(S_CVTA,    CVTA,    "cvta")     // Convert address (generic ↔ specific)

// -----------------------------------------------------------------------------
// 4. 算术运算（Arithmetic Instructions）
// -----------------------------------------------------------------------------
X(S_ADD,     ADD,     "add")      // Addition
X(S_SUB,     SUB,     "sub")      // Subtraction
X(S_MUL,     MUL,     "mul")      // Multiplication (full precision)
X(S_MUL24,   MUL24,   "mul24")    // 24-bit integer multiply
X(S_DIV,     DIV,     "div")      // Division
X(S_REM,     REM,     "rem")      // Remainder
X(S_MIN,     MIN,     "min")      // Minimum
X(S_MAX,     MAX,     "max")      // Maximum
X(S_NEG,     NEG,     "neg")      // Negation
X(S_ABS,     ABS,     "abs")      // Absolute value
X(S_MAD,     MAD,     "mad")      // Multiply-Add (a*b + c)
X(S_MAD24,   MAD24,   "mad24")    // 24-bit integer MAD
X(S_FMA,     FMA,     "fma")      // Fused Multiply-Add

// -----------------------------------------------------------------------------
// 5. 位运算（Bitwise Instructions）
// -----------------------------------------------------------------------------
X(S_AND,     AND,     "and")      // Bitwise AND
X(S_OR,      OR,      "or")       // Bitwise OR
X(S_XOR,     XOR,     "xor")      // Bitwise XOR
X(S_NOT,     NOT,     "not")      // Bitwise NOT
X(S_SHL,     SHL,     "shl")      // Shift left
X(S_SHR,     SHR,     "shr")      // Shift right

// -----------------------------------------------------------------------------
// 6. 比较与选择（Comparison & Selection）
// -----------------------------------------------------------------------------
X(S_SETP,    SETP,    "setp")     // Set predicate (comparison)
X(S_SELP,    SELP,    "selp")     // Select based on predicate

// -----------------------------------------------------------------------------
// 7. 数学函数（Mathematical Functions）
// -----------------------------------------------------------------------------
X(S_SIN,     SIN,     "sin")      // Sine
X(S_COS,     COS,     "cos")      // Cosine
X(S_LG2,     LG2,     "lg2")      // Base-2 logarithm
X(S_EX2,     EX2,     "ex2")      // Base-2 exponential
X(S_RCP,     RCP,     "rcp")      // Reciprocal (1/x)
X(S_RSQRT,   RSQRT,   "rsqrt")    // Reciprocal square root (1/sqrt(x))
X(S_SQRT,    SQRT,    "sqrt")     // Square root

// -----------------------------------------------------------------------------
// 8. 原子操作与特殊指令（Atomic & Special Operations）
// -----------------------------------------------------------------------------
X(S_ATOM,    ATOM,    "atom")     // Atomic memory operation
X(S_WMMA,    WMMA,    "wmma")     // Warp Matrix Multiply-Accumulate (Tensor Core)

// -----------------------------------------------------------------------------
// 9. 位计数与前导零（Bit Manipulation Utilities）
// -----------------------------------------------------------------------------
X(S_POPC,    POPC,    "popc")     // Population count (count of 1-bits)
X(S_CLZ,     CLZ,     "clz")      // Count leading zeros

// -----------------------------------------------------------------------------
// 10. 同步指令
// -----------------------------------------------------------------------------
X(S_BAR,     BAR,     "bar")      // Barrier synchronization


// =============================================================================
// End of statement_types.def
// Note: S_UNKNOWN is intentionally excluded (no associated type or handler)
// =============================================================================